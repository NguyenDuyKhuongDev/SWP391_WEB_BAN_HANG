@model IEnumerable<OnlineShop.Models.Blog>

@{
    ViewData["Title"] = "Blog & News | OnlineShop";
}

<!-- Hero Banner -->
<div class="container-fluid position-relative text-white py-5 mb-5"
     style="background-image: url('https://plus.unsplash.com/premium_photo-1683121263622-664434494177?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTN8fGZhc2hpb258ZW58MHx8MHx8fDA%3D');
            background-size: cover;
            background-position: center;
            min-height: 400px;">

    <!-- Lớp phủ mờ -->
    <div class="position-absolute top-0 start-0 w-100 h-100"
         style="background-color: rgba(0, 0, 0, 0.5);"></div>

    <!-- Nội dung chính -->
    <div class="container text-center position-relative" style="z-index: 2;">
        <h1 class="display-4 fw-bold mb-3">OnlineShop Blog</h1>
        <p class="lead mb-4">Khám phá xu hướng mới, mẹo hay và câu chuyện từ các chuyên gia</p>

        <form class="d-flex justify-content-center">
            <div class="input-group rounded shadow" style="max-width: 500px;">
                <input type="text" class="form-control border-0 px-4 py-2" placeholder="Tìm kiếm bài viết..." aria-label="Search">
                <button class="btn btn-primary px-4" type="submit">
                    <i class="fas fa-search me-1"></i> Tìm
                </button>
            </div>
        </form>
    </div>
</div>




<!-- Main Content -->
<div class="container">
    <!-- Featured Blog -->
    @if (Model != null && Model.Any())
    {
        var featuredBlog = Model.First();
        <div class="card mb-5 border-0 shadow-lg overflow-hidden rounded-4">
            <div class="row g-0">
                <div class="col-lg-6">
                    @if (!string.IsNullOrEmpty(featuredBlog.Thumbnail?.ThumnailUrl))
                    {
                        <img src="@featuredBlog.Thumbnail.ThumnailUrl"
                             class="img-fluid w-100 h-100"
                             style="object-fit: cover; min-height: 300px;"
                             alt="@featuredBlog.Title" />
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center text-muted h-100" style="min-height: 300px;">
                            <span class="fs-5">No Image Available</span>
                        </div>
                    }
                </div>

                <div class="col-lg-6 d-flex align-items-center">
                    <div class="card-body p-5">
                        <span class="badge bg-primary mb-3 px-3 py-2 fs-6 rounded-pill">Featured</span>
                        <h2 class="card-title fw-bold mb-3">@featuredBlog.Title</h2>
                        <p class="card-text text-muted mb-4">@featuredBlog.MetaDescription</p>

                        <div class="d-flex flex-wrap align-items-center gap-3">
                            <div class="small text-muted">
                                <strong>@featuredBlog.AuthorId</strong>
                            </div>
                            <div class="small text-muted">
                                @featuredBlog.PublishedDate
                            </div>
                            <a asp-action="Details" asp-route-id="@featuredBlog.Id"
                               class="btn btn-primary rounded-pill px-4 py-2 ms-auto">
                                Read More
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


    <!-- Categories Filter -->
    <div class="mb-5">
        <h3 class="fw-bold mb-4">Browse by Category</h3>
        <div class="d-flex flex-wrap gap-2">
            <a href="#" class="btn btn-outline-secondary rounded-pill px-4">All</a>
            <a href="#" class="btn btn-outline-secondary rounded-pill px-4">Technology</a>
            <a href="#" class="btn btn-outline-secondary rounded-pill px-4">Fashion</a>
            <a href="#" class="btn btn-outline-secondary rounded-pill px-4">Lifestyle</a>
            <a href="#" class="btn btn-outline-secondary rounded-pill px-4">Business</a>
        </div>
    </div>

    <!-- Blog Grid -->
    <h3 class="fw-bold mb-4">Latest Articles</h3>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
        @if (Model != null && Model.Count() > 1)
        {
            @foreach (var blog in Model.Skip(1))
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm">
                        @if (!string.IsNullOrEmpty(blog.Thumbnail?.ThumnailUrl))
                        {
                            <img src="@blog.Thumbnail.ThumnailUrl" class="card-img-top" alt="@blog.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center text-muted" style="height: 200px;">
                                <i class="fas fa-image fa-2x"></i>
                            </div>
                        }
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <small class="text-primary fw-bold">CATEGORY</small>
                                <small class="text-muted">@blog.PublishedDate</small>
                            </div>
                            <h5 class="card-title fw-bold">@blog.Title</h5>
                            <p class="card-text text-muted">
                                @if (!string.IsNullOrEmpty(blog.MetaDescription))
                                {
                                    @(blog.MetaDescription.Length > 100 ? blog.MetaDescription.Substring(0, 100) + "..." : blog.MetaDescription)
                                }
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-user-circle me-2 text-secondary"></i>
                                <small class="text-muted">By @blog.AuthorId</small>
                                <a asp-action="Details" asp-route-id="@blog.Id" class="btn btn-outline-primary rounded-pill px-4 py-2 ms-auto fw-semibold">
                                    Read  <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else if (Model != null && Model.Count() == 1)
        {
            <div class="col-12 text-center py-5">
                <div class="alert alert-info">No additional articles found. Check back later for more updates!</div>
            </div>
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="alert alert-warning">No blog articles available at this time.</div>
            </div>
        }
    </div>
</div>

<!-- Popular Tags -->
<div class="container mb-5">
    <h3 class="fw-bold mb-4">Popular Tags</h3>
    <div class="d-flex flex-wrap gap-2">
        @foreach (var tag in new[] { "Ecommerce", "Marketing", "SEO", "Web Design", "Social Media", "Trends", "Innovation", "Shopping" })
        {
            <a href="#" class="btn btn-sm btn-outline-secondary rounded-pill px-3">#@tag</a>
        }
    </div>
</div>
